<style>

    .loading {
        opacity: 0.5;
    }
</style>

<template>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header">Select VUE Component</div>

                    <div class="card-body">

<!-- <div v-if="loading">Загрузка...</div> -->


<form>
    
<div v-bind:class="{ loading: loading }">

<select required="required" v-model="selected.test1" :disabled="loading == 1">
  <option disabled value="">Выберите район</option>
  <option v-for="district in districts" :value="district.id">{{ district.name }}</option>
</select>

<select required="required" v-model="selected.test2" :disabled="loading == 1">
  <option disabled value="">Выберите улицу</option>
  <option v-for="district in districts2" :value="district.id">{{ district.name }}</option>
</select>

</div>

<input type="submit" name="submit">

</form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

<script>

import axios from 'axios';

    export default {

data() {
            return {
              loading: true,
              districts: [],
              districts2: [],
              selected: {
                test1 : 1,
                test2 : 2,
              }
            }
        },

  methods: {

   async test1() {
          this.loading = true;
        try {
          let response = await axios.get('select/data/2');
          this.districts = response.data;
          this.loading = false;
          this.test2();
        } catch (e) {
          console.log(e.response) 
        }
    },

   async test2() {
          this.loading = true;
        try {
          let response = await axios.get('select/data/1');
          this.districts2 = response.data;
          this.loading = false;
        } catch (e) {
          console.log(e.response) 
        }
    },

   load_Test2() {
        this.selected.test2 = "";
        this.test2();

   }

  },

  watch: {
    'selected.test1': 'load_Test2',
  },


  computed: {
    computed1: function () {
      console.log('computed1');
    }
    },

        mounted() {
                this.test1();

        }
    }
</script>
